<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_5"
        android:elevation="@dimen/dim_5">

        <RelativeLayout
            android:id="@+id/popularItemView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dim_10">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_5"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold"
                tools:text="Title" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/dim_10"
                android:layout_toStartOf="@+id/imgFacts"
                android:layout_toLeftOf="@+id/imgFacts"
                android:textSize="@dimen/text_size_14"
                tools:text="Description" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgFacts"
                android:layout_width="@dimen/dim_100"
                android:layout_height="@dimen/dim_70"
                android:layout_below="@+id/tvTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dim_10"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>
